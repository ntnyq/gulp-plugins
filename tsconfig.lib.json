{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "outDir": "dist",
    "composite": true,
    "declaration": true,
    "declarationMap": false,
    "target": "ES2022",
    "lib": ["DOM", "ES2022"],
    "module": "ESNext",
    "moduleResolution": "node",
    "newLine": "lf",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "strictNullChecks": true
  },
  "include": ["./packages/**/*.ts", "./scripts/*.ts"],
  "exclude": ["**/dist", "**/tests"]
}
