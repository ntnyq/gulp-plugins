{
  "name": "root",
  "private": true,
  "packageManager": "pnpm@7.8.0",
  "scripts": {
    "build": "pnpm -r run build",
    "clean": "pnpm -r run clean",
    "lint": "eslint .",
    "prepare": "husky install",
    "release": "changeset version",
    "test": "vitest"
  },
  "devDependencies": {
    "@changesets/cli": "^2.24.1",
    "@ntnyq/eslint-config-typescript": "^1.0.4",
    "@ntnyq/prettier-config": "^1.0.4",
    "@types/fancy-log": "^2.0.0",
    "@types/js-beautify": "^1.13.3",
    "@types/through2": "^2.0.36",
    "@types/vinyl": "^2.0.6",
    "eslint": "^8.21.0",
    "husky": "8.0.1",
    "lint-staged": "^13.0.3",
    "pnpm": "^7.8.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.4",
    "vinyl": "^2.2.1",
    "vitest": "^0.20.3"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,json,yml,yaml}": "eslint --fix",
    "*.{json,md}": "prettier --write"
  },
  "prettier": "@ntnyq/prettier-config",
  "eslintConfig": {
    "extends": "@ntnyq/typescript",
    "root": true,
    "rules": {
      "@typescript-eslint/quotes": [
        "error",
        "backtick"
      ]
    }
  },
  "eslintIgnore": [
    "lib"
  ]
}
